<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message + "error" %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |b| %>
  <h4>Title</h4>
  <%= b.text_field :title, class: "book_title"%>
  <h4>Body</h4>
  <%= b.text_area :body, class: "book_body" %>
  <p><%= b.submit 'Update Book'%></p>

  <%= link_to "Show", book_path(@book), class: "show_#{@book.id}" %>
  <%= link_to "Back", books_path, class: "back" %>
<% end %>